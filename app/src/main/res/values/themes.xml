<resources>
    <style name="Theme.ST5" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/P5</item>
        <item name="colorPrimaryVariant">@color/R0</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/R1</item>
        <item name="colorSecondaryVariant">@color/R0</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="calendario_add" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/transparent</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/P3</item>
        <item name="android:colorControlHighlight">@color/P5</item>
        <item name="android:colorControlActivated">@color/P1</item>
        <item name="android:calendarTextColor">@color/white</item>
        <item name="android:dayOfWeekBackground">@color/white</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/transparent</item>
        <item name="android:dayOfWeekBackground">@color/P3</item>
        <item name="android:yearListSelectorColor">@color/P3</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="SpinnerStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/P0</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>