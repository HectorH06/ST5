<resources>
    <style name="Theme.AppTheme.Light" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/X5</item>
        <item name="colorPrimaryVariant">@color/X2</item>
        <item name="colorOnPrimary">@color/X0</item>

        <item name="colorSecondary">@color/X1</item>
        <item name="colorSecondaryVariant">@color/X3</item>
        <item name="colorOnSecondary">@color/X4</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="perfil_background" parent="Theme.AppTheme.Light">
        <item name="android:background">@drawable/gradient_background_perfil</item>
    </style>
    <style name="historial_background" parent="Theme.AppTheme.Light">
        <item name="android:background">@drawable/gradient_background_historial</item>
    </style>
    <style name="index_background" parent="Theme.AppTheme.Light">
        <item name="android:background">@drawable/gradient_background_index</item>
    </style>
    <style name="pda_background" parent="Theme.AppTheme.Light">
        <item name="android:background">@drawable/gradient_background_planes_de_ahorro</item>
    </style>
    <style name="finanzas_background" parent="Theme.AppTheme.Light">
        <item name="android:background">@drawable/gradient_background_finanzas</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="calendario_add" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/transparent</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimaryInverse">?attr/colorPrimary</item>
        <item name="android:textColorSecondaryInverse">?attr/colorSecondaryVariant</item>
        <item name="android:colorControlHighlight">?attr/colorPrimary</item>
        <item name="android:colorControlActivated">?attr/colorSecondary</item>
        <item name="android:calendarTextColor">?attr/colorPrimary</item>
        <item name="android:dayOfWeekBackground">?attr/colorPrimary</item>
    </style>

    <style name="historial" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/transparent</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColorPrimaryInverse">?attr/colorSecondary</item>
        <item name="android:textColorPrimary">?attr/colorSecondary</item>
        <item name="android:textColorSecondaryInverse">@color/O0</item>
        <item name="android:colorControlHighlight">@color/O5</item>
        <item name="android:colorControlActivated">@color/O1</item>
        <item name="android:calendarTextColor">?attr/colorPrimary</item>
        <item name="android:dayOfWeekBackground">?attr/colorPrimary</item>
    </style>

    <style name="CustomDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/transparent</item>
        <item name="android:dayOfWeekBackground">?attr/colorSecondaryVariant</item>
        <item name="android:yearListSelectorColor">?attr/colorSecondaryVariant</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="SpinnerStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/P0</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>