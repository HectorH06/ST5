    <LinearLayout
        android:id="@+id/LayoutPendientes"
        android:layout_width="60dp"
        android:layout_height="380dp"
        android:layout_marginTop="174dp"
        android:layout_marginBottom="177dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="match_parent"
            android:layout_height="126.6dp"
            android:background="@color/R1"
            android:text="CheckBox1"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="126.6dp"
            android:background="@color/O0"
            android:text="CheckBox2"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="126.6dp"
            android:background="@color/G0"
            android:text="CheckBox3"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/Calendario"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="333dp"
        android:layout_marginBottom="570dp"
        android:background="@color/N4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:contentDescription="@string/dias_ahorrando"/>

    <ImageButton
        android:id="@+id/MedidorDeAhorroButton"
        android:layout_width="62dp"
        android:layout_height="85dp"
        android:layout_marginTop="323dp"
        android:layout_marginBottom="323dp"
        android:background="@drawable/confshape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete"
        android:contentDescription="@string/medidor_de_ahorro"/>

    <ImageButton
        android:id="@+id/ConfigButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/configshape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings"
        android:contentDescription="@string/configuracion"/>



