<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_index">

    <ProgressBar
        android:id="@+id/GraficoPastel"
        style="?android:attr/progressBarStyle"
        android:layout_width="221dp"
        android:layout_height="233dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="249dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="249dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/AgregarIngresoButton"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_marginStart="331dp"
        android:layout_marginTop="532dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="138dp"
        android:background="@color/B1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_24" />

    <ImageButton
        android:id="@+id/AgregarGastoButton"
        android:layout_width="68dp"
        android:layout_height="57dp"
        android:layout_marginStart="331dp"
        android:layout_marginTop="593dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="81dp"
        android:background="@color/R1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/button_onoff_indicator_off" />

    <Switch
        android:id="@+id/SwitchGrupos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="182dp"
        android:layout_marginTop="482dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="222dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LayoutPendientes"
        android:layout_width="96dp"
        android:layout_height="380dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="315dp"
        android:layout_marginBottom="177dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="match_parent"
            android:layout_height="126.6dp"
            android:background="@color/R1"
            android:text="CheckBox1"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="126.6dp"
            android:background="@color/O1"
            android:text="CheckBox2"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="126.6dp"
            android:background="@color/G1"
            android:text="CheckBox3"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/CalendarImage"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="333dp"
        android:layout_marginBottom="570dp"
        android:background="@color/N4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    <ImageButton
        android:id="@+id/MedidorDeAhorroButton"
        android:layout_width="62dp"
        android:layout_height="85dp"
        android:layout_marginStart="333dp"
        android:layout_marginTop="323dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="323dp"
        android:background="@color/P4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />

    <ImageButton
        android:id="@+id/ConfigButton"
        android:layout_width="64dp"
        android:layout_height="61dp"
        android:layout_marginStart="331dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="654dp"
        android:background="@color/N4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage" />



</androidx.constraintlayout.widget.ConstraintLayout>