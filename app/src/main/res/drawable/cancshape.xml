<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/R0" />
            <gradient
                android:startColor="@color/R1"
                android:endColor="@color/R0"
                android:type="linear"
                android:angle="0"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/R1" />
            <gradient
                android:startColor="@color/R3"
                android:endColor="@color/R2"
                android:type="linear"
                android:angle="0"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px"/>
        </shape>
    </item>
</selector>