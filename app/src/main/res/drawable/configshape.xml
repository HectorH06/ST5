<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/black" />
            <gradient
                android:startColor="@color/N3"
                android:endColor="@color/N1"
                android:type="linear"
                android:angle="0"/>

            <stroke
                android:width="4dp"
                android:color="@color/black"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/N1" />
            <gradient
                android:startColor="@color/N4"
                android:endColor="@color/N2"
                android:type="linear"
                android:angle="0"/>

            <stroke
                android:width="4dp"
                android:color="@color/black"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px"/>
        </shape>
    </item>
</selector>