<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/G0" />
            <gradient
                android:startColor="@color/G3"
                android:endColor="@color/G1"
                android:type="linear"
                android:angle="0"/>

            <stroke
                android:width="2dp"
                android:color="@color/G0"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/G1" />
            <gradient
                android:startColor="@color/G4"
                android:endColor="@color/G2"
                android:type="linear"
                android:angle="0"/>

            <stroke
                android:width="2dp"
                android:color="@color/G1"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px"/>
        </shape>
    </item>
</selector>