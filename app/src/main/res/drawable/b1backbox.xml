<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/B0" />
            <gradient
                android:startColor="@color/B4"
                android:endColor="@color/B2"
                android:type="linear"
                android:angle="0"/>

            <stroke
                android:width="4dp"
                android:color="@color/B0"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/B1" />
            <gradient
                android:startColor="@color/B5"
                android:endColor="@color/B3"
                android:type="linear"
                android:angle="0"/>

            <stroke
                android:width="4dp"
                android:color="@color/B1"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="30px"/>
        </shape>
    </item>
</selector>