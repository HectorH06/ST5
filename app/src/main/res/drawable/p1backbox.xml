<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/P0" />
            <gradient
                android:startColor="@color/P5"
                android:endColor="@color/white"
                android:type="linear"
                android:angle="0"/>

            <stroke
                android:width="0dp"
                android:color="@color/P0"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="100px"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/P1" />
            <gradient
                android:startColor="@color/P5"
                android:endColor="@color/white"
                android:type="linear"
                android:angle="0"/>

            <stroke
                android:width="0dp"
                android:color="@color/P1"/>

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <corners android:radius="100px"/>
        </shape>
    </item>
</selector>