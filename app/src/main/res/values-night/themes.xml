<resources>
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/X1</item>
        <item name="colorPrimaryVariant">@color/X3</item>
        <item name="colorOnPrimary">@color/X4</item>

        <item name="colorSecondary">@color/X5</item>
        <item name="colorSecondaryVariant">@color/X2</item>
        <item name="colorOnSecondary">@color/X0</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="perfil_background" parent="Theme.AppTheme">
        <item name="android:background">@drawable/gradient_background_perfil2</item>
    </style>
    <style name="historial_background" parent="Theme.AppTheme">
        <item name="android:background">@drawable/gradient_background_historial2</item>
    </style>
    <style name="index_background" parent="Theme.AppTheme">
        <item name="android:background">@drawable/gradient_background_index2</item>
    </style>
    <style name="pda_background" parent="Theme.AppTheme">
        <item name="android:background">@drawable/gradient_background_planes_de_ahorro2</item>
    </style>
    <style name="finanzas_background" parent="Theme.AppTheme">
        <item name="android:background">@drawable/gradient_background_finanzas2</item>
    </style>

    <style name="calendario_add" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/transparent</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimaryInverse">?attr/colorPrimary</item>
        <item name="android:textColorSecondaryInverse">?attr/colorSecondaryVariant</item>
        <item name="android:colorControlHighlight">?attr/colorPrimary</item>
        <item name="android:colorControlActivated">?attr/colorSecondary</item>
        <item name="android:calendarTextColor">?attr/colorPrimary</item>
        <item name="android:dayOfWeekBackground">?attr/colorPrimary</item>
    </style>
</resources>